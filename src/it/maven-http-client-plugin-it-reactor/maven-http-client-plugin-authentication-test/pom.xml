<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>@pom.groupId@</groupId>
		<artifactId>maven-http-client-plugin-it-reactor</artifactId>
		<version>@project.version@</version>
	</parent>
	<artifactId>maven-http-client-plugin-authentication-test</artifactId>
	<name>maven-http-client-plugin integration test : form authentication</name>
	<packaging>pom</packaging>

	<build>
		<plugins>
			<plugin>
				<groupId>@pom.groupId@</groupId>
				<artifactId>maven-http-client-plugin</artifactId>
				<version>@project.version@</version>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<goals>
							<goal>execute</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<failSafe>false</failSafe>
					<request>
						<properties>
							<property>
								<name>url</name>
								<value>${authentication-page-url}</value>
							</property>
							<property>
								<name>credentials</name>
								<bean>
									<id>credentials</id>
									<className>com.google.code.maven.plugin.http.client.Credentials</className>
									<properties>										
										<property>
											<name>login</name>
											<value>${authentication-login}</value>
										</property>
										<property>
											<name>password</name>
											<value>${authentication-password}</value>
										</property>
									</properties>
								</bean>
							</property>
						</properties>
					</request>
					<transformers>
						<transformer>
							<id>checkStatus</id>
							<className>com.google.code.maven.plugin.http.client.transformer.HttpStatusCodeValidator</className>
						</transformer>
						<transformer>
							<id>responseWriter</id>
							<className>com.google.code.maven.plugin.http.client.transformer.ResponseToFileResource</className>
							<properties>
								<property>
									<name>target</name>
									<value>file://${project.build.directory}/generated-html/html-authentication-content.html</value>
								</property>
							</properties>
						</transformer>
					</transformers>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>